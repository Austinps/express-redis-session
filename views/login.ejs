<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Login</title>
    <style>
      /* Add basic styles to form container */
      form {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 50px;
      }

      /* Add basic styles to inputs */
      input[type='text'],
      input[type='password'] {
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        width: 100%;
        box-sizing: border-box;
      }

      /* Add basic styles to button */
      button[type='submit'] {
        background-color: #4caf50;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
        box-sizing: border-box;
      }

      /* Add basic styles to error message */
      p {
        color: red;
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
     <div>
      <% if (error) { %>
      <p style="color: red"><%= error %></p>
      <% } %>
    </div>
    <h1>Login</h1>
    <form id="login-form">
      <label for="email">
        Email:
        <input type="email" name="email" id="email" required />
      </label>
      <br />
      <label for="password">
        Password:
        <input type="password" name="password" id="password" required />
      </label>
      <br />
      <button type="submit" id="button">Login</button>
      <a href="/forgot-password">forgot password?</a>
    </form>
    <script>
      const form = document.getElementById('login-form');

      form.addEventListener('submit', (event) => {
        event.preventDefault();

        const email = document.getElementById('email').value;
        const password = document.getElementById('password').value;
        const button = document.getElementById('button');

        button.disabled = true; // Disable the button on submission

        fetch('/login', {
          method: 'POST',
          body: JSON.stringify({ email, password }),
          headers: {
            'Content-Type': 'application/json',
          },
        })
          .then((response) => {
            if (response.ok) {
              // Redirect to /protected
              window.location.href = '/protected';
            } else {
              return response.text();
            }
          })
          .then((errorMessage) => {
            const errorContainer = document.querySelector('#login-form p');
            errorContainer.textContent = errorMessage;
          })
          .catch((error) => console.error(error))
          .finally(() => {
            button.disabled = false; // Re-enable the button after the request is completed
          });
      });
    </script>
  </body>
</html>
