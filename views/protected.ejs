<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Protected Page</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
      }
      h1 {
        background-color: #007bff;
        color: #fff;
        padding: 20px;
        margin: 0;
      }
      p {
        font-size: 1.2em;
        margin: 20px 0;
      }
      a {
        color: #007bff;
        text-decoration: none;
      }
      a:hover {
        text-decoration: underline;
      }
      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f5f5f5;
        border: 1px solid #ccc;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
    </style>
  </head>
  <body>
    <h1>Protected Page</h1>
    <% if (typeof message !== 'undefined') { %>
    <p><%= message %></p>
    <% } %>
    <p>Hello, <%= user.email %></p>
    <form id="checkbox-form" action="/update-checkbox" method="POST">
      <input type="checkbox" id="checkbox" name="isChecked" />
      <label for="checkbox">Check this box</label>
      <br />
      <button type="submit">Submit</button>
    </form>
    <form action="/logout" method="POST">
      <button type="submit">Logout</button>
    </form>
  </body>
  <script>
    const checkbox = document.getElementById('checkbox');
    checkbox.checked = '<%= isChecked %>' === 'true';
    const form = document.getElementById('checkbox-form');
    form.addEventListener('submit', (event) => {
      event.preventDefault();
      const formData = new FormData(form);
      fetch('/update-checkbox', {
        method: 'POST',
        body: formData,
      })
        .then((response) => response.json())
        .then((data) => console.log(data))
        .catch((error) => console.error(error));
    });
  </script>
</html>
